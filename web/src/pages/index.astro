---
import Layout from "../layouts/guest.astro";
---

<Layout title="Welcome to Astro.">
    <div class="min-h-screen">
        <nav
            class="container mx-auto px-6 py-4 flex justify-between items-center"
        >
            <h1 class="text-2xl font-bold text-white">NexaVerse</h1>
            <a
                href="/dashboard"
                class="bg-white text-primary px-6 py-2 rounded-lg font-medium hover:bg-opacity-90 transition-colors"
            >
                Login
            </a>
        </nav>

        <main class="container mx-auto px-6 pt-20">
            <div class="grid grid-cols-2 gap-12 items-center">
                <div>
                    <h2 class="text-5xl font-bold text-white mb-6">
                        Modern Analytics for Modern Business
                    </h2>
                    <p class="text-lg text-gray-300 mb-8">
                        Transform your business data into actionable insights
                        with our powerful analytics dashboard. Monitor
                        performance, track growth, and make data-driven
                        decisions.
                    </p>
                    <div class="flex gap-4">
                        <a
                            href="/dashboard"
                            class="bg-blue-500 text-white px-8 py-3 rounded-lg font-medium hover:bg-blue-600 transition-colors"
                        >
                            Get Started
                        </a>
                        <a
                            href="#features"
                            class="border border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-primary transition-colors"
                        >
                            Learn More
                        </a>
                    </div>
                </div>
                <div class="relative">
                    <div
                        class="absolute -inset-4 bg-gradient-to-r from-blue-500 to-purple-500 rounded-lg opacity-30 blur-lg"
                    >
                    </div>
                    <img
                        src="/dashboard-preview.png"
                        alt="Dashboard Preview"
                        class="relative rounded-lg shadow-2xl"
                    />
                </div>
            </div>

            <section id="features" class="py-20">
                <h3 class="text-3xl font-bold text-white text-center mb-12">
                    Key Features
                </h3>
                <div class="grid grid-cols-3 gap-8">
                    {
                        [
                            {
                                icon: "insights",
                                title: "Real-time Analytics",
                                description:
                                    "Monitor your business metrics in real-time with interactive dashboards",
                            },
                            {
                                icon: "group",
                                title: "Customer Insights",
                                description:
                                    "Understand your customers better with detailed demographic data",
                            },
                            {
                                icon: "trending_up",
                                title: "Growth Tracking",
                                description:
                                    "Track your business growth with comprehensive reporting tools",
                            },
                        ].map((feature) => (
                            <div class="bg-white bg-opacity-10 p-6 rounded-lg">
                                <span class="material-symbols-outlined text-4xl text-blue-400 mb-4">
                                    {feature.icon}
                                </span>
                                <h4 class="text-xl font-semibold text-white mb-2">
                                    {feature.title}
                                </h4>
                                <p class="text-gray-300">
                                    {feature.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </section>
        </main>
    </div>
</Layout>
