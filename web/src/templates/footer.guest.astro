    <span
        class="my-10
            text-sm space-x-2
            text-secondary-400
            dark:text-secondary-900
            text-center"
    >
        <a
            href="https://laravel.com/docs/11.x"
            class="hover:text-primary-700 dark:hover:text-primary-800"
        >
            Laravel 11
        </a>
        <a
            href="http://php.net"
            class="hover:text-primary-700 dark:hover:text-primary-800">PHP 8</a
        >
    </span>
    <ul class="flex flex-wrap items-center justify-center">
        <li>
            <a
                href="#"
                class="mr-4 text-sm font-normal text-gray-500 hover:border-b-2 hover:border-blue-400 dark:hover:border-b-2 dark:hover:border-blue-200 md:mr-6 dark:text-gray-400"
                >Terms</a
            >
        </li>
        <li>
            <a
                href="#"
                class="mr-4 text-sm font-normal text-gray-500 hover:border-b-2 hover:border-blue-400 dark:hover:border-b-2 dark:hover:border-blue-200 md:mr-6 dark:text-gray-400"
                >Licensing</a
            >
        </li>
        <li>
